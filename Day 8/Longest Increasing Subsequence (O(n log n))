import java.util.*;

class LIS {
    public static void main(String[] args) {
        int[] nums = {10,9,2,5,3,7,101,18};
        List<Integer> list = new ArrayList<>();

        for (int n : nums) {
            int idx = Collections.binarySearch(list, n);
            if (idx < 0) idx = -(idx + 1);
            if (idx == list.size()) list.add(n);
            else list.set(idx, n);
        }
        System.out.println(list.size());
    }
}
