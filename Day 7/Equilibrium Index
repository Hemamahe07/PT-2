class Equilibrium {
    public static void main(String[] args) {
        int[] a = {1, 3, 5, 2, 2};
        int total = 0, left = 0;

        for (int i : a) total += i;

        for (int i = 0; i < a.length; i++) {
            total -= a[i];
            if (left == total) {
                System.out.println("Index: " + i);
                return;
            }
            left += a[i];
        }
        System.out.println("No equilibrium index");
    }
}
